<Window x:Class="WPFMobile.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFMobile"
        mc:Ignorable="d"
        Title="MainWindow" Height="680" Width="800"
        WindowStartupLocation ="CenterScreen">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="10,10,10,10">
            <Button Content="Pacientes" Click="Button_Click1"/>
            <Button Content="Médicos" Click="Button_Click2"/>
            <Button Content="Consultas" Click="Button_Click3"/>
        </StackPanel>
        <Frame x:Name ="main" Margin="0,80,0,0"/>
    </Grid>
</Window>
